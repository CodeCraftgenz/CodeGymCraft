<ui:FluentWindow x:Class="CodeGym.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:CodeGym.UI.Views.Pages"
        Title="CodeGym Offline"
        Width="1340" Height="860"
        MinWidth="960" MinHeight="640"
        WindowStartupLocation="CenterScreen"
        WindowBackdropType="None"
        ExtendsContentIntoTitleBar="True">

    <Grid Background="{DynamicResource ApplicationBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="CodeGym Offline" />

        <ui:NavigationView Grid.Row="1"
                           x:Name="RootNavigation"
                           PaneDisplayMode="Left"
                           IsBackButtonVisible="Auto"
                           IsPaneToggleVisible="True"
                           OpenPaneLength="220">

            <ui:NavigationView.Header>
                <StackPanel Orientation="Horizontal" Margin="8,4,0,4">
                    <Image Source="/Resources/Logo.png" Width="28" Height="28"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           VerticalAlignment="Center" Margin="0,0,10,0" />
                    <TextBlock Text="CodeGym Offline" FontSize="15" FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                </StackPanel>
            </ui:NavigationView.Header>

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Início"
                                       TargetPageType="{x:Type pages:DashboardPage}"
                                       Icon="{ui:SymbolIcon Home24}" />
                <ui:NavigationViewItem Content="Trilhas"
                                       TargetPageType="{x:Type pages:TracksPage}"
                                       Icon="{ui:SymbolIcon Library24}" />
                <ui:NavigationViewItem Content="Desafios"
                                       TargetPageType="{x:Type pages:ChallengesPage}"
                                       Icon="{ui:SymbolIcon Code24}" />
                <ui:NavigationViewItem Content="Progresso"
                                       TargetPageType="{x:Type pages:ProgressPage}"
                                       Icon="{ui:SymbolIcon DataTrending24}" />
                <ui:NavigationViewItem Content="Conquistas"
                                       TargetPageType="{x:Type pages:AchievementsPage}"
                                       Icon="{ui:SymbolIcon Trophy24}" />
                <ui:NavigationViewItem Content="Anotações"
                                       TargetPageType="{x:Type pages:NotesPage}"
                                       Icon="{ui:SymbolIcon Notebook24}" />
                <ui:NavigationViewItem Content="Criador de Pacotes"
                                       TargetPageType="{x:Type pages:PackageCreatorPage}"
                                       Icon="{ui:SymbolIcon BoxMultiple24}" />
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Ajuda"
                                       TargetPageType="{x:Type pages:HelpPage}"
                                       Icon="{ui:SymbolIcon QuestionCircle24}" />
                <ui:NavigationViewItem Content="Configurações"
                                       TargetPageType="{x:Type pages:SettingsPage}"
                                       Icon="{ui:SymbolIcon Settings24}" />
            </ui:NavigationView.FooterMenuItems>

        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
