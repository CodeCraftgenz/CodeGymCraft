<Page x:Class="CodeGym.UI.Views.Pages.TracksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Trilhas">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="960" HorizontalAlignment="Center" Margin="32,20,32,32">

            <TextBlock Text="Trilhas de Aprendizado"
                       Style="{StaticResource PageTitleStyle}" />
            <TextBlock Text="Escolha uma trilha para começar a praticar."
                       Style="{StaticResource PageSubtitleStyle}" />

            <!-- Grade de trilhas 2x2 -->
            <ItemsControl ItemsSource="{Binding Tracks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardAction Margin="6" Padding="24,20"
                                       Command="{Binding DataContext.SelectTrackCommand,
                                           RelativeSource={RelativeSource AncestorType=Page}}"
                                       CommandParameter="{Binding Type}">
                            <StackPanel MinHeight="130">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0"
                                            Background="{Binding TrackAccentBrush}">
                                        <TextBlock Text="{Binding Icon}" FontSize="24"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontSize="22" FontWeight="Bold" />
                                        <TextBlock FontSize="12" Opacity="0.5"
                                                   Margin="0,2,0,0">
                                            <Run Text="{Binding TotalChallenges, Mode=OneWay}" />
                                            <Run Text=" desafios disponíveis" />
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <TextBlock Text="{Binding Description}"
                                           FontSize="13" Opacity="0.6"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,14" />

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ProgressBar Grid.Column="0"
                                                 Value="{Binding ProgressPercent, Mode=OneWay}"
                                                 Maximum="100" Height="6"
                                                 VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="1" FontSize="12" Opacity="0.55"
                                               VerticalAlignment="Center" Margin="12,0,0,0">
                                        <Run Text="{Binding CompletedChallenges, Mode=OneWay}" />
                                        <Run Text="/" />
                                        <Run Text="{Binding TotalChallenges, Mode=OneWay}" />
                                    </TextBlock>
                                </Grid>
                            </StackPanel>
                        </ui:CardAction>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Dica de importação -->
            <Border Margin="6,28,6,0" CornerRadius="10" Padding="20,16"
                    Background="{ui:ThemeResource ControlFillColorDefaultBrush}">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Info24" FontSize="20" Opacity="0.5"
                                   VerticalAlignment="Center" Margin="0,0,14,0" />
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Precisa de mais desafios?" FontSize="14" FontWeight="SemiBold" />
                        <TextBlock Text="Use o Criador de Pacotes na sidebar ou importe um arquivo .zip."
                                   FontSize="13" Opacity="0.55" TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
