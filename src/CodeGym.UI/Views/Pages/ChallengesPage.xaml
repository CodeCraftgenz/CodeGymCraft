<Page x:Class="CodeGym.UI.Views.Pages.ChallengesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Desafios">

    <Grid Margin="32,20,32,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <TextBlock Grid.Row="0"
                   Text="{Binding PageTitle}"
                   Style="{StaticResource PageTitleStyle}" />
        <TextBlock Grid.Row="0"
                   Text="{Binding ChallengeCountText}"
                   FontSize="14" Opacity="0.55"
                   Margin="0,36,0,20" />

        <!-- Filtros -->
        <Border Grid.Row="1" CornerRadius="10" Padding="18,14" Margin="0,0,0,18"
                Background="{ui:ThemeResource ControlFillColorDefaultBrush}">
            <WrapPanel>
                <StackPanel Margin="0,0,14,0">
                    <TextBlock Text="Buscar" FontSize="12" Opacity="0.5" Margin="0,0,0,4" />
                    <ui:TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Nome do desafio..."
                                Width="200" />
                </StackPanel>

                <StackPanel Margin="0,0,14,0">
                    <TextBlock Text="Trilha" FontSize="12" Opacity="0.5" Margin="0,0,0,4" />
                    <ComboBox ItemsSource="{Binding TrackOptions}"
                              SelectedItem="{Binding FilterTrack}"
                              Width="130" />
                </StackPanel>

                <StackPanel Margin="0,0,14,0">
                    <TextBlock Text="Dificuldade" FontSize="12" Opacity="0.5" Margin="0,0,0,4" />
                    <ComboBox ItemsSource="{Binding DifficultyOptions}"
                              SelectedItem="{Binding FilterDifficulty}"
                              Width="140" />
                </StackPanel>

                <StackPanel Margin="0,0,14,0">
                    <TextBlock Text="Status" FontSize="12" Opacity="0.5" Margin="0,0,0,4" />
                    <ComboBox ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding FilterStatus}"
                              Width="130" />
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom">
                    <ui:Button Content="Favoritos"
                               Icon="{ui:SymbolIcon Star24}"
                               Command="{Binding ToggleFavoritesCommand}"
                               Appearance="{Binding FavoritesAppearance}" />
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Contador de resultados -->
        <TextBlock Grid.Row="2" FontSize="13" Opacity="0.5" Margin="0,0,0,10">
            <Run Text="{Binding FilteredCount, Mode=OneWay}" />
            <Run Text=" desafios encontrados" />
        </TextBlock>

        <!-- Lista de desafios -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Challenges}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardAction Margin="0,0,0,6" Padding="14,12"
                                       Command="{Binding DataContext.SelectChallengeCommand,
                                           RelativeSource={RelativeSource AncestorType=Page}}"
                                       CommandParameter="{Binding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="36" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Status icon -->
                                <Border Grid.Column="0" Width="28" Height="28"
                                        CornerRadius="14"
                                        Background="{Binding StatusBrush}"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding StatusIcon}" FontSize="14"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Border>

                                <!-- Title + tags -->
                                <StackPanel Grid.Column="1" Margin="12,0,8,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="14" FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding Tags}"
                                               FontSize="12" Opacity="0.45"
                                               TextTrimming="CharacterEllipsis" />
                                </StackPanel>

                                <!-- Track badge -->
                                <Border Grid.Column="2"
                                        CornerRadius="6" Padding="8,3"
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0"
                                        Background="{Binding TrackBadgeBrush}">
                                    <TextBlock Text="{Binding TrackDisplay}"
                                               FontSize="11" FontWeight="SemiBold" />
                                </Border>

                                <!-- Difficulty badge -->
                                <Border Grid.Column="3"
                                        Background="{Binding DifficultyBrush}"
                                        Style="{StaticResource DifficultyBadgeStyle}">
                                    <TextBlock Text="{Binding DifficultyDisplay}"
                                               FontSize="11" Foreground="White"
                                               FontWeight="SemiBold" />
                                </Border>
                            </Grid>
                        </ui:CardAction>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
