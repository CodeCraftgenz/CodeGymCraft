<Page x:Class="CodeGym.UI.Views.Pages.ProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      Title="Progresso">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="900" HorizontalAlignment="Center" Margin="24,16">

            <!-- Título + Botão PDF -->
            <DockPanel Margin="0,0,0,24">
                <TextBlock DockPanel.Dock="Left"
                           Text="Seu Progresso"
                           FontSize="28" FontWeight="Bold"
                           VerticalAlignment="Center" />
                <ui:Button DockPanel.Dock="Right"
                           Content="Exportar PDF"
                           Icon="{ui:SymbolIcon Document24}"
                           Command="{Binding ExportPdfCommand}"
                           HorizontalAlignment="Right" />
            </DockPanel>

            <!-- Estatísticas gerais -->
            <UniformGrid Columns="3" Margin="0,0,0,20">
                <ui:CardControl Margin="0,0,8,0">
                    <ui:CardControl.Header>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CompletedChallenges}"
                                       FontSize="36" FontWeight="Bold"
                                       Foreground="{ui:ThemeResource SystemAccentColorPrimaryBrush}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Concluídos" FontSize="13" Opacity="0.6"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </ui:CardControl.Header>
                </ui:CardControl>

                <ui:CardControl Margin="4,0">
                    <ui:CardControl.Header>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CurrentStreak}"
                                       FontSize="36" FontWeight="Bold"
                                       Foreground="{StaticResource WarningBrush}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Dias de sequência" FontSize="13" Opacity="0.6"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </ui:CardControl.Header>
                </ui:CardControl>

                <ui:CardControl Margin="8,0,0,0">
                    <ui:CardControl.Header>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding TotalAttempts}"
                                       FontSize="36" FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Tentativas" FontSize="13" Opacity="0.6"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </ui:CardControl.Header>
                </ui:CardControl>
            </UniformGrid>

            <!-- Progresso geral -->
            <ui:CardControl Margin="0,0,0,16">
                <ui:CardControl.Header>
                    <StackPanel>
                        <TextBlock Text="Progresso Geral" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />
                        <ProgressBar Value="{Binding OverallPercent, Mode=OneWay}" Maximum="100" Height="10" />
                        <TextBlock Text="{Binding ProgressText}" FontSize="14" Opacity="0.6" Margin="0,8,0,0" />
                        <TextBlock Text="{Binding LastActivityText}" FontSize="12" Opacity="0.5" Margin="0,4,0,0" />
                    </StackPanel>
                </ui:CardControl.Header>
            </ui:CardControl>

            <!-- Gráfico de barras: progresso por trilha -->
            <TextBlock Text="Progresso por Trilha"
                       FontSize="18" FontWeight="SemiBold"
                       Margin="0,8,0,12" />

            <lvc:CartesianChart Height="220"
                                Series="{Binding TrackBarSeries}"
                                XAxes="{Binding TrackXAxes}"
                                YAxes="{Binding TrackYAxes}"
                                Margin="0,0,0,16" />

            <!-- Progresso por trilha (cards) -->
            <ItemsControl ItemsSource="{Binding TrackProgress}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardControl Margin="0,0,0,6">
                            <ui:CardControl.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding DisplayName}"
                                               FontSize="15" FontWeight="SemiBold"
                                               VerticalAlignment="Center" />

                                    <ProgressBar Grid.Column="1"
                                                 Value="{Binding ProgressPercent, Mode=OneWay}"
                                                 Maximum="100" Height="8"
                                                 VerticalAlignment="Center" Margin="12,0" />

                                    <TextBlock Grid.Column="2" FontSize="13" Opacity="0.6"
                                               VerticalAlignment="Center">
                                        <Run Text="{Binding CompletedChallenges, Mode=OneWay}" />
                                        <Run Text="/" />
                                        <Run Text="{Binding TotalChallenges, Mode=OneWay}" />
                                    </TextBlock>
                                </Grid>
                            </ui:CardControl.Header>
                        </ui:CardControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Gráfico donut: progresso geral -->
            <TextBlock Text="Visão Geral"
                       FontSize="18" FontWeight="SemiBold"
                       Margin="0,20,0,12" />

            <lvc:PieChart Height="250"
                          Series="{Binding DonutSeries}"
                          Margin="0,0,0,24" />

        </StackPanel>
    </ScrollViewer>
</Page>
