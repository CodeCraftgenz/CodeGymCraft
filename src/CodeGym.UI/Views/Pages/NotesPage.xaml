<Page x:Class="CodeGym.UI.Views.Pages.NotesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Anotações">

    <Grid Margin="24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Anotações"
                   FontSize="28" FontWeight="Bold"
                   Margin="0,0,0,16" />

        <!-- Busca -->
        <ui:CardControl Grid.Row="1" Margin="0,0,0,16">
            <ui:CardControl.Header>
                <DockPanel>
                    <ui:TextBox DockPanel.Dock="Left"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Buscar nas anotações..."
                                Width="400" />
                    <TextBlock DockPanel.Dock="Right"
                               Text="{Binding NotesCountText}"
                               FontSize="13" Opacity="0.6"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right" />
                </DockPanel>
            </ui:CardControl.Header>
        </ui:CardControl>

        <!-- Lista + Editor -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Lista de notas -->
            <Border Grid.Column="0" CornerRadius="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Mensagem quando vazio -->
                        <TextBlock Text="Nenhuma anotação encontrada."
                                   FontSize="14" Opacity="0.5"
                                   HorizontalAlignment="Center"
                                   Margin="0,32,0,0"
                                   Visibility="{Binding HasNoNotes, Converter={StaticResource BoolToVisibility}}" />

                        <ItemsControl ItemsSource="{Binding Notes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:CardAction Margin="0,0,0,4"
                                                   Command="{Binding DataContext.SelectNoteCommand,
                                                       RelativeSource={RelativeSource AncestorType=Page}}"
                                                   CommandParameter="{Binding}">
                                        <StackPanel>
                                            <DockPanel>
                                                <TextBlock DockPanel.Dock="Left"
                                                           Text="{Binding ChallengeTitle}"
                                                           FontSize="14" FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis" />
                                                <ui:Button DockPanel.Dock="Right"
                                                           Icon="{ui:SymbolIcon Delete24}"
                                                           Appearance="Danger"
                                                           HorizontalAlignment="Right"
                                                           Padding="4"
                                                           Command="{Binding DataContext.DeleteNoteCommand,
                                                               RelativeSource={RelativeSource AncestorType=Page}}"
                                                           CommandParameter="{Binding}" />
                                            </DockPanel>
                                            <TextBlock Text="{Binding TrackDisplay}"
                                                       FontSize="11" Opacity="0.5" />
                                            <TextBlock Text="{Binding Preview}"
                                                       FontSize="12" Opacity="0.6"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,4,0,0" />
                                            <TextBlock Text="{Binding ModifiedDisplay}"
                                                       FontSize="11" Opacity="0.4"
                                                       Margin="0,4,0,0" />
                                        </StackPanel>
                                    </ui:CardAction>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <GridSplitter Grid.Column="1" Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch" />

            <!-- Editor de nota -->
            <Grid Grid.Column="2" Margin="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Info do desafio selecionado -->
                <StackPanel Grid.Row="0" Margin="0,0,0,8"
                            Visibility="{Binding HasSelectedNote, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="{Binding SelectedChallengeTitle}"
                               FontSize="18" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding SelectedTrackDisplay}"
                               FontSize="13" Opacity="0.6" />
                </StackPanel>

                <!-- TextBox de edição -->
                <TextBox Grid.Row="1"
                         Text="{Binding NoteContent, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Cascadia Code, Consolas"
                         FontSize="14"
                         IsEnabled="{Binding HasSelectedNote}" />

                <!-- Status de salvamento -->
                <TextBlock Grid.Row="2"
                           Text="{Binding SaveStatus}"
                           FontSize="12" Opacity="0.5"
                           Margin="0,6,0,0"
                           HorizontalAlignment="Right" />
            </Grid>
        </Grid>
    </Grid>
</Page>
