{
  "id": "html-adv-007",
  "track": "html",
  "title": "Open Graph Tags",
  "description": "Adicione meta Open Graph.",
  "starterCode": "<!DOCTYPE html>\n<html lang=\"pt-BR\">\n<head>\n    <meta charset=\"UTF-8\">\n    <!-- Adicione meta OG tags -->\n    <title>Open Graph</title>\n</head>\n<body><p>Conteúdo</p></body>\n</html>",
  "tags": [
    "SEO",
    "OpenGraph"
