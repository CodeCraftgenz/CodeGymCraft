        "successMessage": "OG title ok!"
      },
      {
        "type": "element-exists",
        "selector": "meta[property='og:description']",
        "errorMessage": "og:description não encontrado.",
        "successMessage": "OG description ok!"
      },
      {
        "type": "element-exists",
        "selector": "meta[property='og:type']",
        "errorMessage": "og:type não encontrado.",
        "successMessage": "OG type ok!"
      }
    ]
  }
