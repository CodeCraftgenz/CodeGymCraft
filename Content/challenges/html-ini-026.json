      {
        "type": "attribute-exists",
        "selector": "label",
        "attribute": "for",
        "errorMessage": "Atributo for não encontrado.",
        "successMessage": "For presente!"
      },
      {
        "type": "attribute-exists",
        "selector": "input",
        "attribute": "id",
        "errorMessage": "id no input não encontrado.",
        "successMessage": "ID no input ok!"
      }
    ]
  }
