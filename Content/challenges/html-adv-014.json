{
  "id": "html-adv-014",
  "track": "html",
  "title": "Product Listing",
  "description": "Layout de e-commerce semântico.",
  "starterCode": "<!DOCTYPE html>\n<html lang=\"pt-BR\">\n<head>\n    <meta charset=\"UTF-8\">\n    <title>Desafio</title>\n</head>\n<body>\n    <!-- Crie listing de produtos -->\n    \n</body>\n</html>",
